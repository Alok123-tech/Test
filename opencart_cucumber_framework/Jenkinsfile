pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Check out the same repository that contains this Jenkinsfile
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                // Windows agents: use bat. On Linux, change to: sh 'mvn -B clean compile'
                bat 'mvn -B clean compile'
            }
        }

        stage('Test') {
            steps {
                echo 'Running Cucumber tests via Maven (mvn test)...'
                bat 'mvn -B test'
            }
        }

        stage('Archive Reports') {
            steps {
                // JUnit XML results from Surefire (if present)
                junit 'target/surefire-reports/*.xml'

                // Archive framework HTML/JSON reports and screenshots
                archiveArtifacts artifacts: 'reports/**, screenshot/**', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
        }
    }
}
